@model DoAnLTW.Models.ViewModel.RegisterVM

@{
    ViewBag.Title = "Đăng Ký Tài Khoản";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<style>
    body {
        font-family: Arial, sans-serif;
    }

    .container {
        height: 750px;
        width: 300px;
        justify-content: center;
    }
    .accountbtn {
        margin-top: 30px;
        width: 275px;
        height: 40px;
        border-radius: 10px;
        align-content: center;
        background-color: black;
        color: white;
    }

    .form-group {
        width: 100%;
        padding: 10px;
        margin-bottom: 5px;
        border: 1px solid #ccc;
        border-radius: 20px;
        font-size: 14px;
    }


    .box-login {
        height: 30px;
        width: 180px;
        border-radius: 10px;
    }
</style>

<div class="container">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-range">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h2 class="col-md-6">Đăng ký tài khoản</h2>
            </div>

            @*Ten dang nhap*@
            <div class="form-group">
                @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "box-login" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            @*Mật khẩu*@
            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "box-login" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            @*Xác nhận mật khẩu*@
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "box-login" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            @*Họ tên khách hàng*@
            <div class="form-group">
                @Html.LabelFor(model => model.CustomerName, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "box-login" } })
                    @Html.ValidationMessageFor(model => model.CustomerName)
                </div>
            </div>

            @*SĐT khách hàng*@
            <div class="form-group">
                @Html.LabelFor(model => model.CustomerPhone, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "box-login" } })
                    @Html.ValidationMessageFor(model => model.CustomerPhone)
                </div>
            </div>

            @*Email khách hàng*@
            <div class="form-group">
                @Html.LabelFor(model => model.CustomerEmail, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.CustomerEmail, new { htmlAttributes = new { @class = "box-login" } })
                    @Html.ValidationMessageFor(model => model.CustomerEmail)
                </div>
            </div>

            @*Địa chỉ khách hàng*@
            <div class="form-group">
                @Html.LabelFor(model => model.CustomerAddress, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "box-login" } })
                    @Html.ValidationMessageFor(model => model.CustomerAddress)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    <input type="submit" value="Đăng ký" class="btn btn-info accountbtn" /><br />
                    <p>Bạn đã có tài khoản?<a href="@Url.Action("Login", "Account", null)">Đăng nhập</a></p>
                </div>
            </div>

        </div>
    }
</div>

