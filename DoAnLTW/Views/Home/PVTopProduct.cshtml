@model DoAnLTW.Models.ViewModel.ProductDetailsVM
@using PagedList.Mvc;
@{
    ViewBag.Title = "PVTopProduct";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link href="~\Content\Style\CustomerHome.css" rel="stylesheet" type="text/css" />

@if (Model.TopProducts != null && Model.TopProducts.Any())
{
    <section class="container-fluid listProduct">
        <h4 style="font-weight:bold;">Top-Selling Products</h4>
        <ul class="list-container">
            @foreach (var product in Model.TopProducts)
            {
                <li class="product-item">
                    <div>
                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                            <img src="@Html.DisplayFor(modelItem => product.ProductImage)" alt="Product Image" />
                        </a>
                    </div>
                    <div>
                        <h5>@Html.DisplayFor(modelItem => product.ProductName)</h5>
                        <p class="prodSale">@Html.DisplayFor(modelItem => product.ProductPrice)</p>
                    </div>
                </li>
            }
        </ul>
    </section>

